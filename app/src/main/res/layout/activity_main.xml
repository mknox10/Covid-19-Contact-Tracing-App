<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lblExposure"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/PositiveTestBttn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_corners"
        android:onClick="setPositiveResult"
        android:text="@string/Submit_Positive_Test_Result"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/covid19"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/covid19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ndsu_covid_19"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/PositiveTestBttn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ProtectTheHerd"
        app:layout_constraintVertical_bias="0.777" />

    <ImageView
        android:id="@+id/ProtectTheHerd"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/bison"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/covid19" />

    <TextView
        android:id="@+id/ExposureText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/you_have_not_been_exposed"
        android:textColor="#000000"
        android:layout_marginTop="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ProtectTheHerd"
        app:layout_constraintBottom_toTopOf="@+id/ExposureBttn"
        tools:layout_editor_absoluteY="576dp"
        />

    <Button
        android:id="@+id/ExposureBttn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners"
        android:onClick="checkExposure"
        android:layout_marginTop="10dp"
        android:text="@string/Check_Exposure"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ExposureText" />

    <Button
        android:id="@+id/StartBeaconBttn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_corners"
        android:onClick="startBeacon"
        android:text="@string/Start_Scanning"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ExposureBttn" />

</androidx.constraintlayout.widget.ConstraintLayout>